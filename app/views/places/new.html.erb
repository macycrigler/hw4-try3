<% if @current_user %>
  <h1>New Place</h1>

  <form action="/places" method="post">
    <p>
      <label for="name_input">Name</label>
      <input type="text" name="place[name]" id="name_input">
    </p>

    <button type="submit">Save</button>
  </form>
<% else %>
  <p>You must log in to view and edit places.</p>
<% end %>
