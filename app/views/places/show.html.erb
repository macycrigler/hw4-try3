<% if @current_user %>

  <div class="container mt-4">
    <h1 class="text-center"><%= @place.name %></h1>

    <h2 class="text-center mb-4">My Entries</h2>

    <div class="row">
      <% @entries.each do |entry| %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <div class="card-body">
              <h3><%= entry.title %></h3>
              <h4><%= entry.occurred_on %></h4>
              <p><%= entry.description %></p>
              <% if entry.uploaded_image.attached? %>
                <img src="<%= url_for(entry.uploaded_image) %>" class="img-fluid">
              <% else %>
                <img src="<%= entry.image %>" class="img-fluid">
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="text-center mt-4">
      <a href="/entries/new?place_id=<%= @place.id %>" class="btn btn-primary mr-2">New Entry</a>
      <a href="/places" class="btn btn-primary">Back to All Places</a>
    </div>
  </div>

<% else %>

  <p class="mt-4">You must log in to view and edit places and entries.</p>

<% end %>
